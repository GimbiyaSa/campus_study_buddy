{
  "info": {
    "name": "Campus Study Buddy API",
    "description": "API collection for testing Campus Study Buddy endpoints with Google OAuth",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{google_id_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000/api/v1",
      "type": "string"
    },
    {
      "key": "google_id_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "üîç Health Check",
      "request": {
        "auth": {
          "type": "noauth"
        },
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/health",
          "host": ["{{base_url}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "üë§ Get Current User Profile",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/users/me",
          "host": ["{{base_url}}"],
          "path": ["users", "me"]
        }
      }
    },
    {
      "name": "üìö Get User's Modules",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/users/me/modules",
          "host": ["{{base_url}}"],
          "path": ["users", "me", "modules"]
        }
      }
    },
    {
      "name": "üìñ Get All Modules",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/modules?limit=10",
          "host": ["{{base_url}}"],
          "path": ["modules"],
          "query": [
            {
              "key": "limit",
              "value": "10"
            }
          ]
        }
      }
    },
    {
      "name": "üë• Get Study Groups",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/groups?limit=10",
          "host": ["{{base_url}}"],
          "path": ["groups"],
          "query": [
            {
              "key": "limit",
              "value": "10"
            }
          ]
        }
      }
    }
  ]
}